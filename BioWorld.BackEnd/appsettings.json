      "RssGeneratorName": "BioWorld",
      "RssTitle": "BioWorld",
      "AuthorName": "Admin",
      "UseFullContent": false
    },
    "WatermarkSettings": {
      "IsEnabled": true,
      "KeepOriginImage": false,
      "FontSize": 20,
      "WatermarkText": "BioWorld"
    },
    "FriendLinksSettings": {
      "ShowFriendLinksSection": true
    },
    "AdvancedSettings": {
      "DNSPrefetchEndpoint": ""
    }
  },
  "AllowedHosts": "*"
